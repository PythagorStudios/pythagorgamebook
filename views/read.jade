extends layout

block content
  div(style="text-align: center; margin:30px")
    br
    h1 #{gameBook.title} - #{pageTitle}
    p(style="margin-50px") #{pageText}
    each option, i in pageOptions
      form(action=".", method="get")
        input(type="hidden", name="path", value="#{option.link}")
        button(class="btn btn-small btn-primary" type="submit") #{option.text}
    br
    br
    br
  form(action="../view", method="get")
    button(class="btn btn-small btn-primary" type="submit" style="position:fixed; bottom:0; right:0; margin:2em 2em 2em 2em") Back to home screen
